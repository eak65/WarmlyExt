{
  "manifest_version": 2,
  "name": "Warmly",
  "version": "0.1",
  "description": "Automated web research assistant.",
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js", "result.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    "jquery-1.10.2.min.js",
    "gmail.js",
    "main.js",
    "result.html",
    "result.js"
  ],
  "externally_connectable": {
    "matches": [
      "*://mail.google.com/*",
      "chrome-extension://elfgdpepfbaecnmmjaimeljhmlobefkc/*"
    ]
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs", 
    "activeTab",
    "notifications",
    "storage",
    "*://*/*"
  ],
  "content_security_policy": 
  "script-src 'self' chrome-extension://elfgdpepfbaecnmmjaimeljhmlobefkc/*;  object-src 'self'"
}
